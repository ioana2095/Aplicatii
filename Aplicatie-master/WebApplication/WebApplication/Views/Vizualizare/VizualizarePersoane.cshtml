@model IEnumerable<WebApplication.Models.VizualizarePersoane>

@{
    ViewBag.Title = "VizualizarePersoane";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>VizualizarePersoane</h2>
<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #eee;
    }

    tr:nth-child(odd) {
        background-color: #fff;
    }

    table th {
        background-color: black;
        color: white;
    }
</style>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prenume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Varsta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ID_Abonament)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Admin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prenume)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Varsta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_Abonament)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Admin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Username)
        </td>
        <td>
            @Html.ActionLink("Details", "Details","Editare", new { UserId=item.ID_Persoana },null)
        </td>
    </tr>
}

</table>
